<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/avo"
        android:text="Cho xin In4 đê!!"
        android:textColor="@color/black"
        android:textSize="30dp" />


    <!--Input Full Name -->
    <EditText
        android:id="@+id/txt_fullname"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/information"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/avoitalic"
        android:gravity="center"
        android:hint="Họ và tên"
        android:padding="20dp"
        android:textColorHint="#D3D3D3"
        android:textSize="25dp" />


    <!-- Input   -->

    <EditText
        android:id="@+id/txt_birth"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt_fullname"
        android:background="#FFFFFF"
        android:fontFamily="@font/avoitalic"
        android:gravity="center"
        android:hint="Năm sinh"
        android:padding="20dp"
        android:textColorHint="#D3D3D3"
        android:textSize="25dp" />

    <!-- Input Email  -->

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt_birth"
        android:background="#FFFFFF"
        android:fontFamily="@font/avoitalic"
        android:gravity="center"
        android:hint="Email"
        android:padding="20dp"
        android:textColorHint="#D3D3D3"
        android:textSize="25dp" />

    <!-- Input Adress  -->

    <EditText
        android:id="@+id/txt_adress"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt_email"
        android:background="#FFFFFF"
        android:fontFamily="@font/avoitalic"
        android:gravity="center"
        android:hint="Địa chỉ"
        android:padding="20dp"
        android:textColorHint="#D3D3D3"
        android:textSize="25dp" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt_adress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3FD081"
        android:fontFamily="@font/avo"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <!-- Buttom Go Back -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#BCBCBC"
        android:fontFamily="@font/avo"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textSize="20dp" />


    <ImageView

        android:id="@+id/homeLogo"
        android:layout_width="200dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-5dp"
        app:srcCompat="@drawable/img" />


</RelativeLayout>